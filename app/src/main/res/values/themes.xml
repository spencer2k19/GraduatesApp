<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GraduatesApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueColor</item>
        <item name="colorPrimaryVariant">@color/blueColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueColor</item>
        <item name="colorSecondaryVariant">@color/blueColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/montserrat_thin</item>
        <item name="android:textSize">12sp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="boxStrokeColor">#D9D9D9</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>


</resources>